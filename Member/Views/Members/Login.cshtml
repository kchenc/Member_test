@{
}

@model Member.Models.MembersModel

<div class="row">
	<div class="col-md-4">
		@if (ViewData["Message"] != null)
		{
			<div class="form-group text-danger control-label">
				@ViewData["Message"]
			</div>
		}
		<form asp-action="Login">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Account" class="control-label">帳號</label>
				<input asp-for="Account" type="text" id="Account" name="Account" class="form-control" />
				<span asp-validation-for="Account" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Password" class="control-label">密碼</label>
				<input asp-for="Password" type="text" id="Password" name="Password" class="form-control" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<br />
			<div class="form-group">
				<input type="submit" name="name" value="登入" class="btn btn-primary"/>
			</div>
		</form>
	</div>
</div>


@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}